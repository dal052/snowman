<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddCardActivity" 
    android:icon="@drawable/studybuddy"
    android:background="#D3D3D3"
    >

    <EditText
        android:id="@+id/enter_front"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_front" />
    
    <EditText
        android:id="@+id/enter_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_back" />

    <Button
        android:id="@+id/click_post"
        android:layout_width="150px"
        android:layout_height="60px"
        android:onClick="addCard"
        android:text="@string/click_post" />

    <Button
        android:id="@+id/click_cancel"
        android:layout_width="150px"
        android:layout_height="60px"
        android:onClick="addCard"
        android:text="@string/click_cancel" />

</LinearLayout>